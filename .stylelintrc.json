{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-standard-scss",
        "stylelint-prettier/recommended"
    ],
    "ignoreFiles": [
        "storybook-static/**/*.css"
    ],
    "rules": {
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "apply",
                    "layer",
                    "responsive",
                    "screen",
                    "tailwind",
                    "variants"
                ]
            }
        ],
        "prettier/prettier": true
    }
}
